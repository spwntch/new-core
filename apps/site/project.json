{
  "name": "site",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/site",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project site --web",
  "targets": {
    "build": {
      "options": {
        "assets": [
          {
            "input": "assets/spwn/under-construction/public",
            "glob": "*.webp",
            "output": "under-construction"
          },
          {
            "input": "assets/spwn/brand/public",
            "glob": "*.webp",
            "output": "brand"
          },
          {
            "input": "assets/spwn/images/public",
            "glob": "*.webp",
            "output": "images"
          },
          {
            "input": "assets/acme/client-logos/svg",
            "glob": "*.svg",
            "output": "client-logos"
          }
        ]
      }
    }
  }
}
