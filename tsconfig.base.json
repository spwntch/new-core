{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/codux": ["codux/src/index.ts"],
      "@/crm": ["libs/crm/src/index.ts"],
      "@/next-app-pages": ["libs/next-app-pages/src/index.ts"],
      "@/next-app-pages/server": ["libs/next-app-pages/src/server.ts"],
      "@/next-auth-pages": ["libs/next-auth-pages/src/index.ts"],
      "@/next-auth-pages/server": ["libs/next-auth-pages/src/server.ts"],
      "@/next-marketing-pages": ["libs/next-marketing-pages/src/index.ts"],
      "@/next-marketing-pages/server": [
        "libs/next-marketing-pages/src/server.ts"
      ],
      "@/next-saas": ["libs/next-saas/src/index.ts"],
      "@/next-saas/server": ["libs/next-saas/src/server.ts"],
      "@/react-tracking": ["libs/react-tracking/src/index.ts"],
      "@/storybook": ["storybook/src/index.ts"],
      "@spwntch/react-ui": ["packages/react-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
